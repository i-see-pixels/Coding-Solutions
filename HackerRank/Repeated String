#include <bits/stdc++.h>

using namespace std;

long repeatedString(string s, long n) {
    int count = 0, extra = 0;
    for(int i = 0; i < s.length(); i++){
        if(s[i] == 97){
            count++;
        }
    }

    for(int i = 0; i < n%s.length(); i++){
        if(s[i] == 97){
            extra++;
        }
    }

    long int freq = n/s.length();
    return count*freq + extra;
}

int main()
{
    ofstream fout(getenv("OUTPUT_PATH"));

    string s;
    getline(cin, s);

    long n;
    cin >> n;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');

    long result = repeatedString(s, n);

    fout << result << "\n";

    fout.close();

    return 0;
}
